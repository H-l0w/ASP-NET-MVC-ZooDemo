@model ZooDemo.Objects.AnimalType
@using ZooDemo.Objects;
<link rel="stylesheet" href="/css/AddForm.css"/>

<h1>Přidat druh</h1>
    <div class="error">
        <h4>@ViewBag.Error</h4>
    </div>
<div class="form_div">
    <div class="form">
        @using (@Html.BeginForm("AddAnimalType", "Administration", FormMethod.Post)){
        <label>Jméno druhu</label>
        @Html.TextBoxFor(m => m.Name)
        <label>Informace o druhu</label>
        @Html.TextAreaFor(m => m.Info)
        <button type="submit">Přidat</button>
    }
    </div>
</div>